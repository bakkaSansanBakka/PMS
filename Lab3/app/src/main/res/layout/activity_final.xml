    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/authorTextFieldFinalActivity"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/authorLabelFinalActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toEndOf="@+id/authorLabelFinalActivity"
        app:layout_constraintTop_toTopOf="@+id/authorLabelFinalActivity"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/publisherLabelFinalActivity"
        android:layout_width="wrap_content"
