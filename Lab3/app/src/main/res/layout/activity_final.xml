        android:id="@+id/yearOfPublicationTextFieldFinalActivity"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/yearOfPublicationLabelFinalActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yearOfPublicationLabelFinalActivity"
        app:layout_constraintTop_toTopOf="@+id/yearOfPublicationLabelFinalActivity" />

