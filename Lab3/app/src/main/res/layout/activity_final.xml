        android:id="@+id/pagesNumberTextFieldFinalActivity"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/pagesNumberLabelFinalActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pagesNumberLabelFinalActivity"
        app:layout_constraintTop_toTopOf="@+id/pagesNumberLabelFinalActivity" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/yearOfPublicationLabelFinalActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year of publication"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
