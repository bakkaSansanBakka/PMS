<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_date"
            android:textSize="24sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/currentDatePickerButton"
            style="?android:spinnerStyle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:onClick="openCurrentDatePicker"
            android:text=""
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/BirthDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="@string/birth_date"
            android:textSize="24sp" />

        <Button
            android:id="@+id/birthDatePickerButton"
            style="?android:spinnerStyle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:onClick="openBirthDatePicker"
            android:text=""
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calculateButton"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/calculate_age_button_value"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <Button
                android:id="@+id/clearButton"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:onClick="clearDatePickers"
                android:text="@string/clear_button_value"
                android:textColor="@color/black"
                android:textSize="19sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>